    .row.justify-content-center
        .col-12.col-sm-12.col-md-8.col-lg-8.col-xl-8.bg
            = image_tag "logo.png", :class => "logo"
            = image_tag "tagline.png", :class => "tagline"
            .container
                .row
                    .col.justify-content-center.d-flex.p-2
                        .d-inline-flex.border.rounded.bg-light
