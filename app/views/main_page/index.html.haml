                    .col.justify-content-center.d-flex.p-2
                        .d-inline-flex.border.rounded.bg-light
                            .fa-stack.fa-2x
                                %i.fa.fa-square.fa-stack-2x
                                %i.fa.fa-clock-o.fa-stack-1x.fa-inverse
                            %span.font_vw.align-bottom#worktime 8:00 - 20:00
